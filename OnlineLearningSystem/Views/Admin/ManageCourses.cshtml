@model OnlineLearningSystem.ViewModels.ManageCoursesViewModel

@{
    ViewData["Title"] = "Manage Courses";
}

<h1 class="mb-4">Manage Courses</h1>

@if (Model.Courses != null && Model.Courses.Any())
{
    <div class="list-group">
        @foreach (var course in Model.Courses)
        {
            <div class="list-group-item list-group-item-action mb-2 shadow-sm rounded border-0">
                <div class="d-flex justify-content-between align-items-start">
                    <!-- Left Section -->
                    <div>
                        <h5 class="mb-1 text-primary">@course.CourseName</h5>
                        <p class="mb-1 text-muted">
                            <i class="bi bi-tags"></i> @course.CategoryName
                        </p>
                        <small>
                            <i class="bi bi-person"></i>
                            <a asp-controller="Instructor" asp-action="Profile" asp-route-id="@course.InstructorId" class="text-decoration-none">
                                @course.InstructorName
                            </a>
                        </small>
                    </div>

                    <!-- Right Section -->
                    <div class="text-end">
                        <p class="mb-1"><i class="bi bi-book"></i> @course.NumberOfLessons Lessons</p>
                        <p class="mb-1"><i class="bi bi-heart-fill text-danger"></i> @course.NumberOfLikes Likes</p>
                        <small class="text-muted">
                            <i class="bi bi-calendar"></i> @course.CreatedDate.ToString("MMM dd, yyyy")
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        No courses available.
    </div>
}
