@model OnlineLearningSystem.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="row g-4">
    <!-- Students Card -->
    <div class="col-md-4">
        <div class="card text-white shadow h-100 border-0" style="background: linear-gradient(135deg, #36d1dc, #5b86e5);">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-people-fill" style="font-size:2.5rem;"></i>
                </div>
                <div>
                    <h5 class="card-title mb-1">Students</h5>
                    <h3 class="fw-bold mb-0">@Model.NumberOfStudent</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Instructors Card -->
    <div class="col-md-4">
        <div class="card text-white shadow h-100 border-0" style="background: linear-gradient(135deg, #ff758c, #ff7eb3);">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-person-badge-fill" style="font-size:2.5rem;"></i>
                </div>
                <div>
                    <h5 class="card-title mb-1">Instructors</h5>
                    <h3 class="fw-bold mb-0">@Model.NumberOfInstructors</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Card -->
    <div class="col-md-4">
        <div class="card text-white shadow h-100 border-0" style="background: linear-gradient(135deg, #11998e, #38ef7d);">
            <div class="card-body d-flex align-items-center">
                <div class="me-3">
                    <i class="bi bi-journal-bookmark-fill" style="font-size:2.5rem;"></i>
                </div>
                <div>
                    <h5 class="card-title mb-1">Courses</h5>
                    <h3 class="fw-bold mb-0">@Model.NumberOfCourses</h3>
                </div>
            </div>
        </div>
    </div>
</div>
