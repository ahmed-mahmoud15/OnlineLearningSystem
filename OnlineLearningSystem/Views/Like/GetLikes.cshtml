@model IEnumerable<OnlineLearningSystem.ViewModels.ShowCourseInStudentProfileViewModel>

@{
    ViewData["Title"] = "GetLikes";
}

<h1 class="mb-4 text-center fw-bold">❤️ My Liked Courses</h1>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0 rounded-3 course-card">
                
                <div class="card-body">
                    <!-- Course Title -->
                    <h5 class="card-title mb-2">
                        <a asp-controller="Course" asp-action="CourseDetails" asp-route-id="@item.Id"
                           class="stretched-link text-decoration-none text-dark fw-semibold">
                            @item.Name
                        </a>
                    </h5>

                    <!-- Example extra info (add from ViewModel if available) -->
                    <p class="card-text text-muted small mb-1">
                        <i class="bi bi-person"></i> Instructor: <span class="fw-medium">John Doe</span>
                    </p>
                    <p class="card-text text-muted small mb-0">
                        <i class="bi bi-calendar"></i> Added on: @item.CreatedAt.ToString("MMM dd, yyyy")
                    </p>
                </div>

                <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center">
                    <span class="text-danger"><i class="bi bi-heart-fill"></i> Liked</span>
                    <a asp-controller="Course" asp-action="CourseDetails" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-primary rounded-pill">
                        View Details
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .course-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .course-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.15);
        }
</style>
