<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineLearningSystem</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineLearningSystem.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)

    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Full height */
            background: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        main {
            flex: 1; /* Pushes footer down */
            display: flex;
            align-items: stretch;
        }

        .content-card {
            background: #fff;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            flex: 1; /* Take full height of available space */
        }

        /* Navbar */
        .navbar {
            background: linear-gradient(90deg, #0062E6, #33AEFF);
        }

        .navbar-brand {
            font-weight: bold;
            color: #fff !important;
        }

        .navbar-nav .nav-link {
            color: #fff !important;
            margin-right: 15px;
        }

            .navbar-nav .nav-link:hover {
                color: #ffe57f !important;
            }

        /* Footer */
        footer {
            background: #343a40;
            color: #ccc;
            padding: 20px 0;
        }

            footer a {
                color: #fff;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <partial name="_Alert" />

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark sticky-top shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Course" asp-action="Index">
                    <i class="bi bi-mortarboard-fill"></i> OnlineLearningSystem
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <partial name="_NavPartial" />
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container flex-grow-1 d-flex">
        <main role="main" class="w-100">
            <div class="content-card">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-center mt-auto">
        <div class="container">
            <p>
                &copy; 2025 - OnlineLearningSystem
            </p>
        </div>
    </footer>

    <!-- Bootstrap & Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
