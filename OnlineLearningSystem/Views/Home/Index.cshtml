@model IEnumerable<OnlineLearningSystem.ViewModels.ShowCoursesInHomeViewModel>

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-5">
    <!-- Page Title -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary display-6">Explore Our Courses</h1>
        <p class="text-muted">Discover courses, instructors, and categories tailored for you</p>
    </div>

    <!-- Courses Grid -->
    <div class="row g-3">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0 rounded-3 overflow-hidden course-card">
                    <!-- Course Header -->
                    <div class="bg-gradient p-3 text-white d-flex flex-column"
                         style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="fw-bold mb-0 text-truncate text-primary">@item.CourseName</h6>
                            <span class="badge bg-dark">@item.CategoryName</span>
                        </div>
                    </div>

                    <!-- Course Body -->
                    <div class="card-body p-3">
                        <p class="mb-1 small">
                            <i class="bi bi-person-circle text-primary"></i>
                            <strong>@item.InstructorName</strong>
                        </p>
                        <p class="mb-1 small">
                            <i class="bi bi-journal-bookmark-fill text-success"></i>
                            Lessons: <strong>@item.NumberOfLessons</strong>
                        </p>
                        <p class="mb-1 small">
                            <i class="bi bi-heart-fill text-danger"></i>
                            Likes: <strong>@item.NumberOfLikes</strong>
                        </p>
                    </div>

                    <!-- Course Footer -->
                    <div class="card-footer bg-light border-0 d-flex justify-content-between p-2">
                        <a asp-action="Profile" asp-controller="Instructor" asp-route-id="@item.InstructorId"
                           class="btn btn-outline-primary btn-sm w-50 me-2 rounded-pill shadow-sm">
                            <i class="bi bi-person-badge"></i> Instructor
                        </a>
                        <a asp-action="CourseDetails" asp-controller="Course" asp-route-id="@item.CourseId"
                           class="btn btn-primary btn-sm w-50 rounded-pill shadow-sm">
                            <i class="bi bi-eye"></i> Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .course-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            font-size: 0.9rem;
        }

            .course-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 0.75rem 1.5rem rgba(0,0,0,0.1);
            }
    </style>
}
