@model IEnumerable<ShowCourseInInstructorProfileViewModel>
@inject OnlineLearningSystem.Services.IEnrollmentService enrollmentService
@{
    var isAuthenticated = User.Identity.IsAuthenticated;
    var isStudent = User.IsInRole("Student");
    var isInstructor = User.IsInRole("Instructor");
}

<div class="mt-5">
    <h4 class="fw-bold mb-4">Courses I Teach</h4>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var course in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 rounded-3">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@course.Name</h5>

                            <div class="d-flex justify-content-between text-muted small mb-3">
                                <span><i class="bi bi-hand-thumbs-up"></i> @course.CountLikes Likes</span>
                                <span><i class="bi bi-people"></i> @course.CountEnrolledStudents Students</span>
                                <span><i class="bi bi-journal-text"></i> @course.CountLessons Lessons</span>
                            </div>

                            @if (isAuthenticated)
                            {
                                @if (isStudent)
                                {
                                    @if (!await enrollmentService.IsStudentEnrolledInCourseAsync(int.Parse(User.FindFirst("UserId")?.Value), course.Id))
                                    {
                                        <form asp-controller="Enrollment" asp-action="Enroll" method="post">
                                            <input type="hidden" name="studentId" value="@int.Parse(User.FindFirst("UserId")?.Value)" />
                                            <input type="hidden" name="courseId" value="@course.Id" />
                                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                            <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">Enroll</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <button class="btn btn-primary rounded-pill px-4 shadow-sm" disabled>
                                            Already Enrolled
                                        </button>
                                    }
                                }else if (isInstructor)
                                {
                                    <a asp-action="CourseDetails" asp-controller="Course" asp-route-id="@course.Id"
                                       class="btn btn-success btn-lg px-4 shadow-sm">
                                        <i class="bi bi-plus-circle"></i> View Course
                                    </a>
                                }
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">This instructor hasn’t added any courses yet.</p>
    }
</div>
