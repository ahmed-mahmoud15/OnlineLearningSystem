@model IEnumerable<OnlineLearningSystem.ViewModels.ShowCourseInStudentProfileViewModel>

<div class="mt-5">
    <h4 class="fw-bold mb-4">My Courses</h4>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var course in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 rounded-3">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-primary">@course.Name</h5>
                            <p class="text-muted small flex-grow-1">@course.Description</p>

                            <p class="mb-2"><strong>Enrolled:</strong> @course.EnrollDate.ToString("MMMM dd, yyyy")</p>

                            <!-- Progress Bar -->
                            <div class="mb-2">
                                <div class="progress" style="height: 10px;">
                                    <div class="progress-bar bg-success" role="progressbar"
                                         style="width: @course.Prgress%;"
                                         aria-valuenow="@course.Prgress" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                                <small class="text-muted">@course.Prgress% complete</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">You are not enrolled in any courses yet.</p>
    }
</div>
